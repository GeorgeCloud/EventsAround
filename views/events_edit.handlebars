<div class="mx-auto mt-5" style="width: 500px;">
  <div class="card text-center">
    <div class="card-header">
      <h5><b>Edit Event</b></h3>
    </div>
    <div class="card-body">
      <form action="/events/{{event.id}}?_method=put" method="POST">
        {{> event_form}}

        <button style="width: 80px;" type="submit" class="btn btn-primary mt-2">Update</button>
      </form>

      <form action="/events/{{event.id}}?_method=DELETE" method="POST">
        <button style="width: 80px;" type="submit" class='btn btn-danger mt-2'>Delete</button>
      </form>
    </div>
  </div>
</div>

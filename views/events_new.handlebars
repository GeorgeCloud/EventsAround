<div class="mx-auto mt-5" style="width: 500px;">
  <div class="card text-center">
    <div class="card-header">
      <h5><b>Create New Event</b></h3>
    </div>
    <div class="card-body">
      <form action="/events" method="POST">
        <input class="mt-2" type="text" name="title" style="width: 100%" placeholder="Event Name">
        <input class="mt-2" type="text" name="organization_name" style="width: 100%" placeholder="Organization Name">
        <input class="mt-2" type="text" name="description" style="width: 100%" placeholder="Description">
        <input class="mt-2" type="text" name="image_url" style="width: 100%" placeholder="Event URL Image">
        <input class="mt-2" type="date" name="date" style="width: 59%">
        <input class="mt-2" type="time" name="time" style="width: 40%">

        <input type="submit" name="" class="mt-2" value="Create Event">
      </form>
    </div>
  </div>
</div>
